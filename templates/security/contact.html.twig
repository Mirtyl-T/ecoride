{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    {% include 'security/menu.html.twig' %}

    <section class="contact-section">
        <h1 class="contact-title">Contactez-nous</h1>

        <div class="contact-messages">
            {% for message in app.flashes('success') %}
                <p class="contact-success">{{ message }}</p>
            {% endfor %}
        </div>

        <form method="post" class="contact-form">
            <div class="form-group">
                <label for="nom" class="form-label">Nom :</label>
                <input type="text" name="nom" id="nom" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email :</label>
                <input type="email" name="email" id="email" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="message" class="form-label">Message :</label>
                <textarea name="message" id="message" rows="5" class="form-textarea" required></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="form-button">Envoyer</button>
            </div>
        </form>
    </section>
{% endblock %}
