{% extends 'base.html.twig' %}

{% block title %}Laisser un avis{% endblock %}

{% block body %}
    {% include 'security/menu.html.twig' %}

    <section class="review-section">
        <h1 class="review-title">Laisser un avis</h1>

        {{ form_start(form, {'attr': {'class': 'review-form'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_row(form.note) }}
            </div>
            <div class="form-group">
                {{ form_row(form.commentaire) }}
            </div>

            <button class="form-button">Envoyer</button>
        
            <div class="form-group">
                {{ form_row(form.isIncident) }}
            </div>
        {{ form_end(form) }}
    </section>

    <section class="incident-section">
        {% include 'security/incident_new.html.twig' with {'form': incidentForm} %}
    </section>
{% endblock %}
