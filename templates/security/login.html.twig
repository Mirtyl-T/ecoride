{% extends 'base.html.twig' %}


{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Sign in</h1>
    <form action="{{ path('app_login') }}" method="post">

        <label for="username">Adresse e-mail : </label>
        <input type="text" name="username" id="username" name="_username" value="{{ last_username }}" required/> <br><br>


        <label for="password">mot de passe  : </label>
        <input type="password" id="password" name="_password" required> <br><br>


        <button type="submit">Se connecter</button><br><br>
        <p>Pas encore de compte ?</p>
        <a href="{{ path('app_register') }}" class="btn btn-success btn-lg">
        Cr√©er un compte
        </a>


    </form>

{% endblock %}